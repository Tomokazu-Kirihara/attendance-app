.header
  %h1 Childendance
  %p 出欠確認アプリケーション

#account-page.account-page
  .account-page__inner
    .account-page__inner--user-form
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .field
          .field-label
            = f.label :お名前
            %p (お子様のお名前を”ひらがな”でご登録ください  例：きりはら  ともかず )
          .field-input
            = f.text_field :name, autofocus: true
        .field
          .field-label
            = f.label :メールアドレス
          .field-input
            = f.email_field :email
        .field
          .field-label
            = f.label :パスワード
            %p (英数字8文字以上)
          .field-input
            = f.password_field :password, autocomplete: "off"
        .field
          .field-label
            = f.label :パスワード：確認用
            %p (再度パスワードをご入力ください)
          .field-input
            = f.password_field :password_confirmation, autocomplete: "off"
        .actions
          = f.submit "新規作成", class: 'btn'
      = render "devise/shared/links"
